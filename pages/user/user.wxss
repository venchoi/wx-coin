/* pages/user/user.wxss */

.container {
  background: rgba(238, 242, 246, 0.65);
}

.header {
  padding: 0 20px;
  height: 128px;
  background-color: #fff;
}

.login-header {
  display: flex;
  padding-top: 24px;
}

.portrait {
  margin-right: 24px;
  width: 80px;
  height: 80px;
}
.portrait-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.name {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.nick {
  font-size: 24px;
  color: #394551;
  line-height: 24px;
}

.uid {
  margin-top: 5px;
  font-size: 14px;
  color: #a8b4bf;
  line-height: 22px;
}

.logout-header {
  display: flex;
  flex-direction: column;
}

.page-title {
  margin-top: 32px;
  font-size: 24px;
  color: #394551;
  line-height: 24px;
  font-weight: bold;
}

.navi-login {
  margin-top: 16px;
  width: 100px;
  height: 28px;
  background-image: linear-gradient(-90deg, #6b6bdf 0%, #5f99da 100%);
  border-radius: 2px;
  color: #fff;
}

.user-container {
  padding: 0 20px;
  margin-top: 10px;
  background-color: #fff;
}

.user-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-weight: bold;
  height: 56px;
  font-size: 15px;
  color: #394551;
  line-height: 24px;
  border-bottom: 1px solid rgba(32, 42, 51, 0.08);
}

.right > iconfont {
  font-size: 24px;
  color: #707d8a;
}
