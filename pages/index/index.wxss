.container {
  padding: 0 20px;
}

.page-header {
  padding: 0 15px;
  display: flex;
  justify-content: space-between;
  align-items: cneter;
  height: 56px;
  line-height: 56px;
  font-size: 24px;
  color: #394551;
  letter-spacing: 0;
  font-weight: bold;
}

.page-title {
}

.search {
}

.icon-search {
  color: #394551;
  font-size: 24px;
}

page-header
.offsetTop {
  margin-top: 28px;
}

.lastest-top {
  position: fixed;
  top: 0;
  display: flex;
  justify-content: center;
  width: 100%;
  height: 28px;
  background-color: #5f99da;
}

.top-tip {
  font-size: 12px;
  color: #fff;
  line-height: 28px;
}

.lastest-susp {
  position: fixed;
  top: 16px;
  display: flex;
  justify-content: center;
  width: 100%;
}

.susp-tip {
  width: 88px;
  height: 28px;
  background-color: #5f99da;
  box-shadow: 0 4px 16px 0 rgba(95, 153, 218, 0.30);
  border-radius: 100px;
  font-size: 12px;
  color: #fff;
  line-height: 28px;
  text-align: center;
}
