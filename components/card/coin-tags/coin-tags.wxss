.coin-tags {
  display: flex;
  flex-flow: row wrap;
  margin-top: 6px;
}

.coin-tag {
  display: flex;
  align-items: center;
  margin-right: 8px;
  margin-bottom: 8px;
  padding: 4px 8px;
  font-size: 11px;
  border-radius: 3px;
  height: 16px;
  font-weight: bold;
  background-color: rgba(238, 242, 246, 0.6);
}

.coin-code {
  display: inline-block;
  margin-right: 8px;
  color: #707d8a;
}

.ratio {
  color: #a8b4bf;
}

.bad {
  color: #ff6262;
}

.good {
  color: #55dbb3;
}
