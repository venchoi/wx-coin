/* component/coin-card/coin-card.wxss */

.coin-card > navigator {
  display: flex;
  justify-content: space-between;
  border-bottom: #eef2f6 solid 1px;
  padding: 16px 0;
  width: 100%;
  height: 66px;
}

.column {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}

.logo {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  overflow: hidden;
}

.logo>image {
  width: 32px;
}

.data {
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  text-align: left;
  margin-left: 16px;
  height: 100%;
}

.head {
}

.name {
  font-size: 16px;
  color: #0b1013;
  font-weight: bold;
}

.market {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 39px;
  font-weight: bold;
  color: #707d8a;
}

.price {
  font-size: 16px;
  color: #0b1013;
}

.ratio {
  font-size: 12px;
}

.bad {
  color: #ff6262;
}

.good {
  color: #55dbb3;
}

.action {
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  align-items: flex-end;
}

.follow {
  height: 28px;
  width: 64px;
  background-color: #5f99da;
  border-radius: 3px;
  font-size: 12px;
  color: #fff;
  border: 1px solid #5f99da;
  text-align: center;
  line-height: 28px;
}

.follow.active {
  font-size: 12px;
  color: #5f99da;
  background: #fff;
  border: 1px solid #eef2f6;
}

.data-source {
  font-size: 12px;
  color: #a8b4bf;
}
